<div class="container-fluid d-flex justify-content-center ">
  <div class="col-6 m-2 p-3 bg-light rounded shadow">
    <div class="d-flex justify-content-between m-2 p-3 border-bottom">
      <h2>Nuevo Técnico <%= "de #{User.find(params[:user_id]).name}" if params[:user_id].present? %></h2>
    </div>

    <%= render "form", tech: @tech %>

      <div id="page_navigation">
        <div class="row m-1 p-2">
          <% if current_user.super? %>
            <%= link_to teches_path, class: "btn btn-danger" do %>
              <%= fa_icon "arrow-left", text: " Volver a técnicos" %>
            <% end %>
          <% elsif current_user.admin? %>
            <%= link_to User.find(params[:user_id]), class: "btn btn-danger" do %>
              <%= fa_icon "arrow-left", text: " Volver a #{User.find(params[:user_id]).name}" %>
            <% end %>
          <% end %>
          
        </div>
      </div>
      
  </div>
</div>
