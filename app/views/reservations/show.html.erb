<div class="container-fluid d-flex justify-content-center ">
  <div class="col-lg-6 col-10 m-2 p-3 bg-light rounded shadow">
    <%= render @reservation %>
  </div>
</div>

<div id="page_navigation">
  <div class="row m-1 p-2">
    <% if current_user.admin? %>
      <%= link_to users_path, class: "btn btn-danger" do %>
        <%= fa_icon "arrow-left", text: " Volver a usuarios" %>
      <% end %>
    <% else %>
      <%= link_to reservations_path, class: "btn btn-danger" do %>
        <%= fa_icon "arrow-left", text: " Volver a reservas" %>
      <% end %>
    <% end %>
  </div>
</div>
