<div class="container-fluid d-flex justify-content-center">

  <div class="col-lg-8 col-md-10 bg-light rounded shadow">
    <div class="d-flex justify-content-between m-2 p-3 border-bottom">
      <h2>Reservas <%= params[:table].present? ? "del día" : "del mes" %></h2>
      <%= link_to new_reservation_path, class: "btn btn-success" do %>
      <%= fa_icon "plus", text: "Nueva reserva" %>
      <% end %>
    </div>

    <% if params[:table] == "day"%>
    <div id="calendario" class="col-lg-8 d-block mx-auto m-2 p-3">
      <%= render "simple_calendar/day_table" %>
    </div>
    <% else %>
    <div id="calendario" class="col-lg-8 d-block mx-auto m-2 p-3">
      <%= render "simple_calendar/month_table" %>
    </div>
    <% end %>

    <div id="tabla_reservas" class="col-lg-8 d-block mx-auto m-2 p-3">
      <% if current_user.admin? %>
      <p>Para añadir una reserva, hazlo desde el perfil de la empresa</p>
      <% end %>
      <%= render "reservations/table_reservations_index" %>
    </div>

    <div id="page_navigation">
      <div class="row m-1 p-2">
        <%= link_to root_path, class: "btn btn-dark" do %>
        <%= fa_icon "home", text: " Página Principal" %>
        <% end %>
      </div>
    </div>

  </div>
</div>